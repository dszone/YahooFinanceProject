<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>         
	<class name="com.mercury.beans.Stock" table="stocks">
        <id name="SId" type="java.lang.Integer">
            <column name="sid" />
            <generator class="increment" />
        </id>
        <property name="scode" type="string">
            <column name="scode" length="10" not-null="true" unique="true" />
        </property>
        <property name="stockName" type="string">
            <column name="stockName" length="20" not-null="true" unique="true" />
        </property>
        <set name="ownerships" table="owns" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="sid" />
            </key>
            <one-to-many class="com.mercury.beans.Ownership" />
        </set>
    </class>
</hibernate-mapping>